<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XavierLoaizaComplementario.login">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="8" CornerRadius="0">
                <Label Text="Login" HorizontalTextAlignment="Center" TextColor="White" FontSize="20"/>
            </Frame>


            <Image Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png"  WidthRequest="65" HeightRequest="65" Margin="10,30"/>


            <Entry x:Name="txtUsuario" Placeholder="Usuario" Margin="50,10"  ></Entry>

            <Entry x:Name="txtContrasena" Placeholder="Contraseña" Margin="50,10"></Entry>

            <Button x:Name="btnLogin" Text="Iniciar" Margin="90,5" Clicked="btnLogin_Clicked"></Button>
            <Button x:Name="btnRegistroLogin" Text="Registrar" Margin="90,5" Clicked="btnRegistroLogin_Clicked"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>